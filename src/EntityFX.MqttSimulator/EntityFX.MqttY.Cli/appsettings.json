{
  "startScenario": "mqttRelayTest",
  "scenarios": {
    "mqttRelayTest": {
      "type": "networkSimulation",
      "actions": {
        "InitNetwork": {
          "type": "network-init",
          "index": 0,
          "delay": "00:00:01",
          "configuration": {
            "ticks": {
              "tickPeriod": "00:00:00.0001",
              "receiveWaitPeriod": "00:00:30",
              "networkTicks": 2
            },
            "graph": {
              "networks": {
                "net.global": {
                  "index": 2,
                  "links": [
                    {
                      "w": 1
                    }
                  ]
                },
                "net1.local": {
                  "index": 0,
                  "links": [
                    {
                      "network": "net.global",
                      "w": 1
                    }
                  ]
                },
                "net2.local": {
                  "index": 1,
                  "links": [
                    {
                      "network": "net.global",
                      "w": 1
                    }
                  ]
                },
                "net3.local": {
                  "index": 3,
                  "links": [
                    {
                      "network": "net.global",
                      "w": 1
                    }
                  ]
                }
              },
              "nodes": {
                "mqtt1": {
                  "type": "server",
                  "protocol": "mqtt",
                  "specification": "mqtt-server",
                  "network": "net1.local"
                },
                "mqtt2": {
                  "type": "server",
                  "protocol": "mqtt",
                  "specification": "mqtt-server",
                  "network": "net2.local"
                },
                "mqtt3": {
                  "type": "server",
                  "protocol": "mqtt",
                  "specification": "mqtt-server",
                  "network": "net3.local"
                },
                "mgx1": {
                  "type": "client",
                  "protocol": "mqtt",
                  "specification": "mqtt-client",
                  "network": "net1.local",
                  "connectsToServer": "mqtt1",
                  "quantity": 3,
                  "additional": {
                    "subscribe": [
                      "telemetry/+"
                    ],
                    "subscribeQos": [
                      "AtLeastOnce"
                    ]
                  }
                },
                "mgx2": {
                  "type": "client",
                  "protocol": "mqtt",
                  "specification": "mqtt-client",
                  "network": "net2.local",
                  "connectsToServer": "mqtt2",
                  "quantity": 3,
                  "additional": {
                    "subscribe": [
                      "telemetry/+"
                    ],
                    "subscribeQos": [
                      "AtLeastOnce"
                    ]
                  }
                },
                "mgx3": {
                  "type": "client",
                  "protocol": "mqtt",
                  "specification": "mqtt-client",
                  "network": "net3.local",
                  "connectsToServer": "mqtt3",
                  "quantity": 3,
                  "additional": {
                    "subscribe": [
                      "telemetry/+"
                    ],
                    "subscribeQos": [
                      "AtLeastOnce"
                    ]
                  }
                },
                "mqrelay1": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-relay",
                  "network": "net1.local",
                  "configuration": {
                    "listenTopics": {
                      "ls1": {
                        "server": "mqtt1",
                        "topics": [
                          "telemetry/+"
                        ]
                      },
                      "rls1": {
                        "server": "mqtt1",
                        "topics": [
                          "relay1/telemetry/+"
                        ]
                      }
                    },
                    "relayTopics": {
                      "rs3": {
                        "server": "mqtt3",
                        "topicPrefix": "relay3/"
                      },
                      "rs2": {
                        "server": "mqtt2",
                        "topicPrefix": "relay2/"
                      },
                      "lrs1": {
                        "server": "mqtt1",
                        "replaceRelaySegment": true,
                        "topicPrefix": "local/"
                      }
                    },
                    "routeMap": {
                      "ls1": [
                        "rs2",
                        "rs3"
                      ],
                      "rls1": [
                        "lrs1"
                      ]
                    }
                  }
                },
                "mqrelay2": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-relay",
                  "network": "net2.local",
                  "configuration": {
                    "listenTopics": {
                      "ls2": {
                        "server": "mqtt2",
                        "topics": [
                          "telemetry/+"
                        ]
                      },
                      "rls2": {
                        "server": "mqtt2",
                        "topics": [
                          "relay2/telemetry/+"
                        ]
                      }
                    },
                    "relayTopics": {
                      "rs1": {
                        "server": "mqtt1",
                        "topicPrefix": "relay1/"
                      },
                      "rs2": {
                        "server": "mqtt3",
                        "topicPrefix": "relay3/"
                      },
                      "lrs2": {
                        "server": "mqtt2",
                        "replaceRelaySegment": true,
                        "topicPrefix": "local/"
                      }
                    },
                    "routeMap": {
                      "ls2": [
                        "rs1",
                        "rs2"
                      ],
                      "rls2": [
                        "lrs2"
                      ]
                    }
                  }
                },
                "mqrelay3": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-relay",
                  "network": "net3.local",
                  "configuration": {
                    "listenTopics": {
                      "ls3": {
                        "server": "mqtt3",
                        "topics": [
                          "telemetry/+"
                        ]
                      },
                      "rls3": {
                        "server": "mqtt3",
                        "topics": [
                          "relay3/telemetry/+"
                        ]
                      }
                    },
                    "relayTopics": {
                      "rs1": {
                        "server": "mqtt1",
                        "topicPrefix": "relay1/"
                      },
                      "rs2": {
                        "server": "mqtt2",
                        "topicPrefix": "relay2/"
                      },
                      "lrs3": {
                        "server": "mqtt3",
                        "replaceRelaySegment": true,
                        "topicPrefix": "local/"
                      }
                    },
                    "routeMap": {
                      "ls3": [
                        "rs1",
                        "rs2"
                      ],
                      "rls3": [
                        "lrs3"
                      ]
                    }
                  }
                },
                "mqReceiver1": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-receiver",
                  "network": "net1.local",
                  "configuration": {
                    "server": "mqtt1",
                    "topics": [
                      "telemetry/+",
                      "local/telemetry/+"
                    ]
                  }
                },
                "mqReceiver2": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-receiver",
                  "network": "net2.local",
                  "configuration": {
                    "server": "mqtt2",
                    "topics": [
                      "telemetry/+",
                      "local/telemetry/+"
                    ]
                  }
                },
                "mqReceiver3": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-receiver",
                  "network": "net3.local",
                  "configuration": {
                    "server": "mqtt3",
                    "topics": [
                      "telemetry/+",
                      "local/telemetry/+"
                    ]
                  }
                }
              }
            },
            "monitoring": {
              "type": "text-file", //text-file, console
              "path": "{scenario}-{date}.txt",
              "ignore": {
                "category": [ "Refresh" ]
              },
              "scopesEnabled": false //true
            }
          }
        },
        "PublishTelemetry": {
          "type": "mqtt-publish",
          "index": 1,
          //"iterationsTimeout": "00:00:01",
          "configuration": {
            "Topic": "telemetry/temperature",
            "clientName": "mgx1",
            "Payload": [
              9,
              8,
              7
            ]
          }
        }
      }
    }
  }
}