{
  "startScenario": "mqttRelayTest",
  "scenarios": {
    "mqttRelayTest": {
      "type": "networkSimulation",
      "actions": {
        "InitNetwork": {
          "type": "network-init",
          "index": 0,
          "delay": "00:00:01",
          "configuration": {
            "ticks": {
              "tickPeriod": "00:00:00.0001",
              "receiveWaitPeriod": "00:00:30",
              "networkTicks": 2
            },
            "graph": {
              "networkTypes": {
                "10g": {
                  "speed": 1250000000, //10 Gigabit
                  "refreshTicks": 2,
                  "sendTicks": 3,
                  "queueSize": 100000
                },
                "1g": {
                  "speed": 125000000, //1 Gigabit
                  "ticks": 3,
                  "sendTicks": 5,
                  "queueSize": 50000
                },
                "wifi5": {
                  "speed": 18750000, //150 Megabit
                  "ticks": 10,
                  "sendTicks": 20,
                  "queueSize": 15000
                }
              },
              "networks": {
                "net.global": {
                  "index": 2,
                  "networkType": "10g",
                  "links": [
                    {
                      "w": 1
                    }
                  ]
                },
                "net1.local": {
                  "index": 0,
                  "networkType": "1g",
                  "links": [
                    {
                      "network": "net.global",
                      "w": 1
                    }
                  ]
                },
                "net2.local": {
                  "index": 1,
                  "networkType": "1g",
                  "links": [
                    {
                      "network": "net.global",
                      "w": 1
                    }
                  ]
                },
                "net3.local": {
                  "index": 3,
                  "networkType": "wifi5",
                  "links": [
                    {
                      "network": "net.global",
                      "w": 1
                    }
                  ]
                }
              },
              "nodes": {
                "mqb1": {
                  "type": "server",
                  "protocol": "mqtt",
                  "specification": "mqtt-server",
                  "network": "net1.local"
                },
                "mqb2": {
                  "type": "server",
                  "protocol": "mqtt",
                  "specification": "mqtt-server",
                  "network": "net2.local"
                },
                "mqb3": {
                  "type": "server",
                  "protocol": "mqtt",
                  "specification": "mqtt-server",
                  "network": "net3.local"
                },
                "mqc1": {
                  "type": "client",
                  "protocol": "mqtt",
                  "specification": "mqtt-client",
                  "network": "net1.local",
                  "connectsToServer": "mqb1",
                  "quantity": 3
                },
                "mqc2": {
                  "type": "client",
                  "protocol": "mqtt",
                  "specification": "mqtt-client",
                  "network": "net2.local",
                  "connectsToServer": "mqb2",
                  "quantity": 3
                },
                "mqc3": {
                  "type": "client",
                  "protocol": "mqtt",
                  "specification": "mqtt-client",
                  "network": "net3.local",
                  "connectsToServer": "mqb3",
                  "quantity": 3
                },
                "mqrc1": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-receiver",
                  "network": "net1.local",
                  "configuration": {
                    "server": "mqb1",
                    "topics": [
                      "telemetry/+",
                      "local/telemetry/+"
                    ]
                  }
                },
                "mqrc2": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-receiver",
                  "network": "net2.local",
                  "configuration": {
                    "server": "mqb2",
                    "topics": [
                      "telemetry/+",
                      "local/telemetry/+"
                    ]
                  }
                },
                "mqrc3": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-receiver",
                  "network": "net3.local",
                  "configuration": {
                    "server": "mqb3",
                    "topics": [
                      "telemetry/+",
                      "local/telemetry/+"
                    ]
                  }
                },
                "mqrl1": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-relay",
                  "network": "net1.local",
                  "configuration": {
                    "listenTopics": {
                      "ls1": {
                        "server": "mqb1",
                        "topics": [
                          "telemetry/+"
                        ]
                      },
                      "rls1": {
                        "server": "mqb1",
                        "topics": [
                          "relay1/telemetry/+"
                        ]
                      }
                    },
                    "relayTopics": {
                      "rs3": {
                        "server": "mqb3",
                        "topicPrefix": "relay3/"
                      },
                      "rs2": {
                        "server": "mqb2",
                        "topicPrefix": "relay2/"
                      },
                      "lrs1": {
                        "server": "mqb1",
                        "replaceRelaySegment": true,
                        "topicPrefix": "local/"
                      }
                    },
                    "routeMap": {
                      "ls1": [
                        "rs2",
                        "rs3"
                      ],
                      "rls1": [
                        "lrs1"
                      ]
                    }
                  }
                },
                "mqrl2": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-relay",
                  "network": "net2.local",
                  "configuration": {
                    "listenTopics": {
                      "ls2": {
                        "server": "mqb2",
                        "topics": [
                          "telemetry/+"
                        ]
                      },
                      "rls2": {
                        "server": "mqb2",
                        "topics": [
                          "relay2/telemetry/+"
                        ]
                      }
                    },
                    "relayTopics": {
                      "rs1": {
                        "server": "mqb1",
                        "topicPrefix": "relay1/"
                      },
                      "rs3": {
                        "server": "mqb3",
                        "topicPrefix": "relay3/"
                      },
                      "lrs2": {
                        "server": "mqb2",
                        "replaceRelaySegment": true,
                        "topicPrefix": "local/"
                      }
                    },
                    "routeMap": {
                      "ls2": [
                        "rs1",
                        "rs3"
                      ],
                      "rls2": [
                        "lrs2"
                      ]
                    }
                  }
                },
                "mqrl3": {
                  "type": "application",
                  "protocol": "mqtt",
                  "specification": "mqtt-relay",
                  "network": "net3.local",
                  "configuration": {
                    "listenTopics": {
                      "ls3": {
                        "server": "mqb3",
                        "topics": [
                          "telemetry/+"
                        ]
                      },
                      "rls3": {
                        "server": "mqb3",
                        "topics": [
                          "relay3/telemetry/+"
                        ]
                      }
                    },
                    "relayTopics": {
                      "rs1": {
                        "server": "mqb1",
                        "topicPrefix": "relay1/"
                      },
                      "rs2": {
                        "server": "mqb2",
                        "topicPrefix": "relay2/"
                      },
                      "lrs3": {
                        "server": "mqb3",
                        "replaceRelaySegment": true,
                        "topicPrefix": "local/"
                      }
                    },
                    "routeMap": {
                      "ls3": [
                        "rs1",
                        "rs2"
                      ],
                      "rls3": [
                        "lrs3"
                      ]
                    }
                  }
                }
              }
            },
            "monitoring": {
              "type": "null", //text-file, console, null
              //"type": "text-file", //text-file, console, null
              "path": "{scenario}-{date}.txt",
              "ignore": {
                "category": [ "Refresh" ]
              },
              "scopesEnabled": false //true
            }
          }
        },
        "PublishTelemetry": {
          "type": "mqtt-publish",
          "index": 1,
          //"iterationsTimeout": "00:00:10",
          //"Iterations": 100,
          "configuration": {
            "publishPeriod" :  "00:01:00",
            "actions": [
              {
                "Topic": "telemetry/temperature",
                "clientName": "mqc1",
                "multi": true,
                "Payload": [
                  23,
                  35
                ]
              },
              {
                "Topic": "telemetry/humidity",
                "clientName": "mqc2",
                "multi": true,
                "Payload": [
                  88
                ]
              },
              {
                "Topic": "telemetry/pressure",
                "clientName": "mqc3",
                "multi": true,
                "Payload": [
                  77,
                  88,
                  99
                ]
              }
            ]
          }
        },
        "WaitSimulationCompleted": {
          "type": "wait-network-queue",
          "index": 2
        }
      }
    }
  }
}